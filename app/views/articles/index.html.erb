<h1>Articles</h1>
<%= link_to "New Article", new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %>
      </a>
    </li>
  <% end %>
</ul>

<%= button_to "Sign out", destroy_user_session_path,
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
